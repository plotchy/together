version: '3.8'

services:
  postgres:
    image: postgres:15
    container_name: together-postgres
    environment:
      POSTGRES_DB: together
      POSTGRES_USER: together
      POSTGRES_PASSWORD: development123
    ports:
      - "5433:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    restart: unless-stopped

volumes:
  postgres_data:
